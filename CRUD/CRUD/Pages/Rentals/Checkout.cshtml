@page
@model CRUD.Pages.Rentals.CheckoutModel
@{
}
<h1>Checkout</h1>
<br />

<h4>Selected items:</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>

    <tbody>
        @{
            double total = 0;
            foreach (var item in Model.Products)
            {
                <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                </tr>
                total += item.Price;
            }
        }
    </tbody>

</table>
<h5>Total: @total$</h5>
        
<form method="post" class="w-50">
    <label for="firstname">Firstname</label>
    <input type="text" asp-for="@Model.Customer.Firstname" class="form-control" />
    <br>
    <br />
    <label for="lastname">Lastname</label>
    <input type="text" asp-for="@Model.Customer.Lastname" class="form-control" />

    <br />
    <br />
    <label for="Adress">Adress</label>
    <input type="text" asp-for="@Model.Customer.Adress" class="form-control" />
    <br />
    <br />

    <label for="Phone">Phone</label>
    <input type="text" asp-for="@Model.Customer.Phone" class="form-control" />




    <select hidden class="form-select" multiple name="itemIds">
        @{
            foreach (var product in Model.Products)
            {
                <option value="@product.ProductId" selected></option>
            }
        }
    </select>






    <input type="submit" class="form-control btn btn-primary" value="Checkout" style="margin-top: 3em"/>
</form>